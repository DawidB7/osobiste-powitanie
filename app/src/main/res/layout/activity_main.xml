<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textviewTytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Osobiste Powitanie"
        android:textSize="51dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewEtykieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wpisz swoje imię poniżej: "
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextImie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Twoje Imię"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonPowitanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Przywitaj Mnie!"







</LinearLayout>